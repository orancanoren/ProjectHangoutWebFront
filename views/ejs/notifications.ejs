<html>
    <head>
        <title>Hangout | Notifications</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link type="text/css" rel="stylesheet" href="/css/style.css" />
    </head>
    <body class="grey lighten-3">
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="js/materialize.min.js"></script>
        <header>
            <nav class="light-blue">
                <div class="container">
                    <div class="nav-wrapper">
                        <a href="/" class="brand-logo left" id="logo">Project Hangout</a>
                        <ul id="nav-mobile" class="right">
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main>
            <div class="container">
                <div class="row">
                    <div class="col s12 m6 offset-m3">
                        <div class="card">
                            <div class="card-content">
                                <div class="row">
                                    <div class="col s12">
                                        <p class="flow-text center">Notifications</p>
                                        <div class="divider"></div>
                                        <% 
                                        if (notifications.length == 0) { %>
                                            <p class="center">You have no notifications!</p>
                                        <% } else { %>
                                            <div class="collection">
                                            <% for (var i = 0; i < notifications.length; i++) {
                                                var current_notification = "";
                                                var blob_iter = 0;
                                                for (var j = 0; j < notifications[i].notif_text.length; j++) {
                                                    if (notifications[i].notif_text[j] == "") {
                                                        current_notification += notifications[i].value_arr[blob_iter] + " ";
                                                        blob_iter++;
                                                    }
                                                    else {
                                                        current_notification += notifications[i].notif_text[j];
                                                    }
                                                } %>
                                                <a href= "<%= notifications[i].action %>" class="collection-item">
                                                    <%= current_notification %>
                                                </a>
                                            <% } %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <footer>

        </footer>
        <script>
        </script>
    </body>
</html>