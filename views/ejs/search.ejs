<html>
    <head>
        <title>Graph | Search</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link type="text/css" rel="stylesheet" href="/css/style.css" />
    </head>
    <body class="grey lighten-3">
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="js/materialize.min.js"></script>
        <header>
            <nav class="light-blue">
                <div class="container">
                    <div class="nav-wrapper">
                        <a href="/" class="brand-logo left" id="logo">Project Hangout</a>
                        <ul id="nav-mobile" class="right">
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main>
            <div class="container">
                <div class="row">
                    <div class="col s12 m6 offset-m3">
                        <div class="card">
                            <div class="card-content">
                                <div class="row">
                                    <div class="col s12">
                                        <p class="flow-text center">Search Results</p>
                                        <div class="divider"></div>
                                        <% 
                                        if (search_results.length == 0) { %>
                                            <p class="center">No results found for "<%= search_query %>" :(</p>
                                        <% } else { %>
                                            <div class="collection">
                                            <% for (var i = 0; i < search_results.length; i++) {  %>
                                                <a href= "/view/<%= search_results[i].email %>" class="collection-item">
                                                    <%= search_results[i].fname %> <%= search_results[i].lname %>
                                                </a>
                                            <% } %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                    
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <footer>

        </footer>
        <script>
        </script>
    </body>
</html>