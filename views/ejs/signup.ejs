<html>
    <head>
        <title>Graph | Signup</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link type="text/css" rel="stylesheet" href="/css/style.css" />
    </head>
    <body class="grey lighten-3">
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="js/materialize.min.js"></script>
        <header>
            <nav class="light-blue">
                <div class="container">
                    <div class="nav-wrapper">
                        <a href="/" class="brand-logo left" id="logo">Project Hangout</a>
                    </div>
                </div>
            </nav>
        </header>
        <main>
            <div class="container">
                <div class="row">
                    <div class="col s12">
                        <h2 class="center" id="title">Sign Up</h2>
                    </div>
                    <div class="col s12 m6 offset-m3">
                        <div class="card">
                            <div class="card-content center">
                                <div class="row">
                                    <div class="col s12">
                                        <p class="flow-text">Magic happens behind this page</p>
                                    </div>
                                    <form class="col s12" action="/signup" method="POST">
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <input name="fname" type="text">
                                                <label for="fname">First Name</label>
                                            </div>
                                            <div class="input-field col s12">
                                                <input name="lname" type="text">
                                                <label for="lname">Last Name</label>
                                            </div>
                                            <div class="input-field col s12">
                                                <input name="school" type="text">
                                                <label for="school">School</label>
                                            </div>
                                            <div class="input-field col s12">
                                                <input name="email_input" type="text" class="validate">
                                                <label for="email_input" data-error="wrong email" data-success="correct">Email</label>
                                            </div>
                                            <div class="input-field col s12">
                                                <input name="password_input" type="password">
                                                <label for="password_input">Password</label>
                                            </div>
                                            <div class="input-field col s12">
                                                <input name="bday" type="date" class="datepicker">
                                                <label for="bday">Date of Birth</label>
                                            </div>

                                            <div class="col s12">
                                                Sex
                                                <p>
                                                    <input name="sex" type="radio" id="male" value="Male">
                                                    <label for="male">Male</label> 
                                                </p>
                                                <p>
                                                    <input name="sex" type="radio" id="female" value="Female">
                                                    <label for="female">Female</label>
                                                </p>
                                            </div>
                                            <div class="col s12">
                                                <button class="btn waves-effect waves-light light-blue" type="submit" name="action">Submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                    
                            </div>
                            
                        </div>
                    </div>
                </div>
                <%  if (message.length > 0) { %>
                <script>
                    Materialize.toast('<%= message %>', 4000);
                </script>
                <% } %>
            </div>
        </main>
        <footer>

        </footer>
        <script>
            $('.datepicker').pickadate({
                selectMonths: true, // Creates a dropdown to control month
                selectYears: 100,
                max: new Date()
            });
        </script>
    </body>
</html>